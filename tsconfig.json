{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "strict": false,
    "strictPropertyInitialization": false,
    "rootDirs": ["src", "tests"],
    "baseUrl": "src",
    "paths": {
      "@/tests/*": ["../tests/*"],
      "@/*": ["*"]
    },
    "typeRoots": [
      "./src/@types"
    ],
    "types": ["@types/jest"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
